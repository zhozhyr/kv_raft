		{
			"name": "RPC (внутрянка, только для дебага, уже выключено))",
			"item": [
				{
					"name": "RequestVote RPC (ручной вызов)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Sender",
								"value": "{{sender_url}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"term\": \"{{term}}\",\n  \"candidate_id\": \"{{candidate_id}}\",\n  \"last_log_index\": \"{{last_log_index}}\",\n  \"last_log_term\": \"{{last_log_term}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/raft/request_vote",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"raft",
								"request_vote"
							]
						},
						"description": "RequestVote RPC (ручной вызов)"
					},
					"response": []
				},
				{
					"name": "AppendEntries RPC (manual)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Sender",
								"value": "{{sender_url}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"term\": \"{{term}}\",\n  \"leader_id\": \"{{leader_id}}\",\n  \"prev_log_index\": \"{{prev_log_index}}\",\n  \"prev_log_term\": \"{{prev_log_term}}\",\n  \"entries\": [],\n  \"leader_commit\": \"{{leader_commit}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/raft/append_entries",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"raft",
								"append_entries"
							]
						},
						"description": "AppendEntries RPC (manual)"
					},
					"response": []
				}
			]
		},
