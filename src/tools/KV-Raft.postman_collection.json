	"item": [
		{
			"name": "KV (клиентские операции)",
			"item": [
				{
					"name": "PUT key/value",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"value\": \"{{value}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/kv/{{key}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"kv",
								"{{key}}"
							]
						},
						"description": "PUT key/value"
					},
					"response": []
				},
				{
					"name": "GET key",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/kv/{{key}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"kv",
								"{{key}}"
							]
						},
						"description": "GET key"
					},
					"response": []
				},
				{
					"name": "DELETE key",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/kv/{{key}}",
							"host": [
								"{{base_url}}"
